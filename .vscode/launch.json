{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": { "PYTEST_ADDOPTS": "--no-cov" }
        },
        {
            "name": "Python: Pytest",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/pytest",
            "args": [],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
        }
    ]
}

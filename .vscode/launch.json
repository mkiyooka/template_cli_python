{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": { "PYTEST_ADDOPTS": "--no-cov" }
        },
        {
            "name": "Python: Pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "Python: Pytest (with coverage)",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["--cov=template_cli_python", "--cov-report=term"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "Python: CLI Main App",
            "type": "debugpy",
            "request": "launch",
            "module": "template_cli_python",
            "args": ["--help"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}
